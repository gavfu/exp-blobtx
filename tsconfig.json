{
  "ts-node": {
    // It is faster to skip typechecking.
    // Remove if you want ts-node to do typechecking.
    "transpileOnly": true,
    "files": true,
    "compilerOptions": {
    }
  },
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2020",
    "skipLibCheck": true,
    "noImplicitAny": true,
    "outDir": "./dist",
    "sourceMap": true
  },
  "types": ["mocha"],
  "include": ["./**/*.ts", "./**/*.js"],
  "exclude": ["node_modules", "dist"]
}
